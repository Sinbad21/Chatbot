# ===================================
# Chatbot Studio - Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# ===================================
# DATABASE (Neon PostgreSQL)
# ===================================
# Get your connection string from: https://neon.tech
DATABASE_URL="postgresql://user:password@ep-xxx.neon.tech/chatbot_studio?sslmode=require"

# ===================================
# AUTHENTICATION & SECURITY
# ===================================
# Generate with: openssl rand -base64 32
JWT_SECRET="your-secret-key-min-32-chars"
JWT_REFRESH_SECRET="your-refresh-secret-key-min-32-chars"

# Session timeout (default: 30 minutes)
SESSION_TIMEOUT_MS=1800000

# ===================================
# API CONFIGURATION
# ===================================
# API Server port
PORT=3001
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL="http://localhost:3000"

# ===================================
# AI PROVIDERS
# ===================================
# OpenAI API Key (for GPT-4, GPT-5)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Anthropic API Key (for Claude)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-..."

# Google AI API Key (for Gemini)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY="..."

# ===================================
# CLOUDFLARE (Production)
# ===================================
# Cloudflare Pages URL
NEXT_PUBLIC_FRONTEND_URL="https://chatbot-5o5.pages.dev"

# Cloudflare Worker API URL
NEXT_PUBLIC_WORKER_API_URL="https://chatbotstudio.gabrypiritore.workers.dev"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID="your-account-id"

# ===================================
# EMAIL (SMTP)
# ===================================
# Gmail example:
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@chatbot-studio.com"

# SendGrid example:
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT=587
# SMTP_USER="apikey"
# SMTP_PASS="your-sendgrid-api-key"

# ===================================
# PAYMENT (Stripe)
# ===================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ===================================
# FILE UPLOAD
# ===================================
# Max file size in bytes (default: 25MB)
MAX_FILE_SIZE=26214400

# Upload directory (use /tmp for Cloudflare Workers)
UPLOAD_DIR="./uploads"

# ===================================
# MULTI-CHANNEL INTEGRATIONS (Optional)
# ===================================
# WhatsApp Business API
WHATSAPP_API_KEY=""
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_WEBHOOK_TOKEN=""

# Telegram Bot
TELEGRAM_BOT_TOKEN=""
TELEGRAM_WEBHOOK_SECRET=""

# Slack App
SLACK_BOT_TOKEN=""
SLACK_SIGNING_SECRET=""
SLACK_APP_ID=""

# Discord Bot
DISCORD_BOT_TOKEN=""
DISCORD_APPLICATION_ID=""
DISCORD_PUBLIC_KEY=""

# ===================================
# RATE LIMITING
# ===================================
# Requests per minute for public chat endpoint
CHAT_RATE_LIMIT=60

# ===================================
# MONITORING & ANALYTICS
# ===================================
# Sentry DSN (optional)
SENTRY_DSN=""

# Google Analytics ID (optional)
NEXT_PUBLIC_GA_ID=""

# ===================================
# DEVELOPMENT
# ===================================
# Enable debug logging
DEBUG=false

# Disable rate limiting in dev
DISABLE_RATE_LIMIT=true
