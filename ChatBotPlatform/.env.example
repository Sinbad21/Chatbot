# ===========================================
# ChatBotPlatform Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# SECURITY SETTINGS
# ===========================================

# JWT Secret Key - Generate a secure random string
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# JWT Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# DATABASE SETTINGS
# ===========================================

# PostgreSQL connection string
DATABASE_URL=postgresql+asyncpg://chatbot_user:your_password_here@localhost:5432/chatbot_db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# ===========================================
# OPENAI API SETTINGS
# ===========================================

# OpenAI API Key (encrypted in production)
OPENAI_API_KEY=your-openai-api-key-here

# Models configuration
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o-mini

# OpenAI API settings
OPENAI_MAX_TOKENS=3000
OPENAI_TEMPERATURE=0.1

# ===========================================
# FILE STORAGE SETTINGS
# ===========================================

# Base path for file storage (relative to project root)
STORAGE_PATH=data

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE_MB=50

# Allowed file extensions
ALLOWED_EXTENSIONS=pdf,txt,docx,md

# ===========================================
# RAG ENGINE SETTINGS
# ===========================================

# Chunking configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOC=1000

# Vector search settings
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ===========================================
# RATE LIMITING
# ===========================================

# Requests per minute per user
RATE_LIMIT_REQUESTS=50

# Burst limit
RATE_LIMIT_BURST=100

# ===========================================
# CORS SETTINGS
# ===========================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:8000

# ===========================================
# LOGGING SETTINGS
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/chatbot.log

# Maximum log file size (MB)
LOG_MAX_SIZE=10

# Number of backup log files
LOG_BACKUP_COUNT=5

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug mode (set to false in production)
DEBUG=true

# Auto reload on code changes
AUTO_RELOAD=true

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================

# Server host
HOST=0.0.0.0

# Server port
PORT=8000

# Workers (for production deployment)
WORKERS=4

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# Redis URL (for advanced caching/rate limiting)
REDIS_URL=redis://localhost:6379

# Email settings (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===========================================
# MONITORING
# ===========================================

# Enable metrics collection
ENABLE_METRICS=false

# Metrics endpoint
METRICS_PORT=9090

# ===========================================
# BACKUP SETTINGS
# ===========================================

# Backup directory
BACKUP_DIR=backups

# Backup frequency (hours)
BACKUP_INTERVAL=24

# Retention period (days)
BACKUP_RETENTION=30